doctype html
html.no-js(lang='en')
	head
		meta(charset='utf-8')
		meta(http-equiv='x-ua-compatible', content='ie=edge')
		title DDreamkol
		meta(name='description', content='Elegant website for storing data about some villages based on Bootstrap 4')
		meta(name='viewport', content='width=device-width, initial-scale=1')
		link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/css/bootstrap.min.css', integrity='sha384-/Y6pD6FV/Vv2HJnA6t+vslU6fwYXjCFtcEpHbNJ0lyAFsXTsjBbfaDjzALeQsN6M', crossorigin='anonymous')
		link(rel='stylesheet', href='https://use.fontawesome.com/releases/v5.0.11/css/all.css', integrity='sha384-p2jx59pefphTFIpeqCcISO9MdVfIm4pNnsL08A6v5vaQc4owkQqxMV8kg4Yvhaw/', crossorigin='anonymous')
		link(rel='stylesheet', href='css/shards.min.css')
		link(rel='stylesheet', href='css/shards-demo.css?v=1.1.0')
		link(rel='stylesheet', href='css/peopleSay.css')
		link(rel='shortcut icon', type='image/png', href='images/favico/favico.png')
	body
		// Navbar
		div
			script(src='js/scripts/navbar.js')
		// background image
		img.bgd(src='images/other/sunrise.svg')
		// Page Content
		.text-center.mb-4
			br
			h2 People say about Dolni Drimkol...
		br
		div
			.container
				.message
					div(style='text-align: center;')
						h5.white Submit a message to the Dolni Drimkol community
					form.was-validated(method='post')
						label(for='form-2-first-name') First name
						input.user-message(type='text', name='nome', placeholder='First name', required='')
						br
						br
						label(for='form-2-first-name') Last name
						input.user-message(type='text', name='cognome', placeholder='Last name', required='')
						br
						br
						label(for='form-2-first-name') Text
						textarea.user-message(type='text', name='message', placeholder='Text here', required='', rows='5')
						br
						br
						div(style='text-align: center;')
							button.btn.btn-pill.btn-success(type='submit')
								i.fa.fa-upload.mr-1
								|  Submit message
				br
				br
				br
				h3(style="text-align: center;") Messages
				each val in reply
					.row.justify-content-md-center(style='padding: 20px;')
						.message(style='padding: 20px;')
							div
								h6.orange(style='text-align: left;')
									strong #{val.nome}
								h6.orange(style='text-align: left;')
									strong #{val.cognome}
								h6.orange(style='border-bottom: 1px solid orange; width: 100%; text-align: left; padding-bottom: 5px;')
									strong #{val.data}
							h6.white(style="width: 100%; overflow-wrap: break-word;")
								| #{val.message}
				else
					h5(style="text-align: center; margin-top: 50px;") No messages yet
			br
			br
			br
			// footer
			div
				br
				br
				p.text-center.small.p-0.mb-4(style='position: relative; bottom: 0; width:100%; color: black;') 2018 â€” Aleksandar Gjoreski
