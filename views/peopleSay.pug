doctype html
html.no-js(lang='en')
	head
		meta(charset='utf-8')
		meta(http-equiv='x-ua-compatible', content='ie=edge')
		title DDreamkol
		meta(name='description', content='Elegant website for storing data about some villages based on Bootstrap 4')
		meta(name='viewport', content='width=device-width, initial-scale=1')
		link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/css/bootstrap.min.css', integrity='sha384-/Y6pD6FV/Vv2HJnA6t+vslU6fwYXjCFtcEpHbNJ0lyAFsXTsjBbfaDjzALeQsN6M', crossorigin='anonymous')
		link(rel='stylesheet', href='https://use.fontawesome.com/releases/v5.0.11/css/all.css', integrity='sha384-p2jx59pefphTFIpeqCcISO9MdVfIm4pNnsL08A6v5vaQc4owkQqxMV8kg4Yvhaw/', crossorigin='anonymous')
		link(rel='stylesheet', href='css/shards.min.css')
		link(rel='stylesheet', href='css/shards-demo.css?v=1.1.0')
		link(rel='stylesheet', href='css/peopleSay.css')
		link(href='css/navbar.css', rel='stylesheet')
		link(rel='shortcut icon', type='image/png', href='images/favico/favico.png')
	body(onscroll="isInViewport(document.querySelectorAll('.poraki'));")
		// Navbar
		div
			if(jazik == 'eng')
				include includes/navbar.pug
			else
				include includes/mk_navbar.pug
		// background image
		img.bgd(src='images/other/sunrise.svg')
		// Page Content
		.text-center.mb-4
			br
			h2 #{titolo1}
		br
		div
			.container
				.message
					div(style='text-align: center;')
						h5.white #{subTitolo1}
					form.was-validated(method='post')
						label(for='form-2-first-name') #{fname1}
						input.user-message(type='text', name='nome', placeholder=fname1, required='')
						br
						br
						label(for='form-2-first-name') #{sname1}
						input.user-message(type='text', name='cognome', placeholder=sname1, required='')
						br
						br
						label(for='form-2-first-name') #{testo1}
						textarea.user-message(type='text', name='message', placeholder=testoP1, required='', rows='5')
						br
						br
						div(style='text-align: center;')
							button.btn.btn-pill.btn-success(type='submit')
								i.far.fa-check-circle.mr-1
								|  #{submit1}
				br
				br
				br
				h3(style="text-align: center;") #{poraki1}
				each val in reply
					.row.justify-content-md-center(style='padding: 20px;')
						.message.poraki(style='padding: 20px;')
							div
								h6.orange(style='text-align: left;')
									strong #{val.nome}
								h6.orange(style='text-align: left;')
									strong #{val.cognome}
								h6.orange(style='border-bottom: 1px solid orange; width: 100%; text-align: left; padding-bottom: 5px;')
									strong #{val.data}
							h6.white(style="width: 100%; overflow-wrap: break-word;")
								| #{val.message}
				else
					h5(style="text-align: center; margin-top: 50px;") #{noPoraki1}
			br
			br
			br
			// footer
			div
				br
				br
				if(jazik == 'eng')
					h5.text-center.small.p-0.mb-4(style='position: relative; bottom: 0; width:100%; color: black;') 2018 — Aleksandar Gjoreski
				else
					h5.text-center.small.p-0.mb-4(style='position: relative; bottom: 0; width:100%; color: black;') 2018 — Александар Ѓорески
			// JavaScript
			#fb-root
			script(src='https://code.jquery.com/jquery-3.2.1.min.js', integrity='sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4=', crossorigin='anonymous')
			script(src='https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js', integrity='sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4', crossorigin='anonymous')
			script(src='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/js/bootstrap.min.js', integrity='sha384-h0AbiXch4ZDo7tp9hKZ4TsHbi047NrKGLO3SEJAg45jXxnGIfYzk4Si90RDIqNm1', crossorigin='anonymous')
			script(src='js/shards.min.js')
			script(src='js/demo.min.js')
			script(src='js/scripts/visibility.js')
			script(src='js/scripts/lingua.js')
