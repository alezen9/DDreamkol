doctype html
html.no-js(lang='en')
    head
        meta(charset='utf-8')
        meta(http-equiv='x-ua-compatible', content='ie=edge')
        title DDreamkol
        meta(name='description', content='Elegant website for storing data about some villages based on Bootstrap 4')
        meta(name='viewport', content='width=device-width, initial-scale=1')
        link(href='css/lightbox/css/lightbox.min.css', rel='stylesheet')
        link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/css/bootstrap.min.css', integrity='sha384-/Y6pD6FV/Vv2HJnA6t+vslU6fwYXjCFtcEpHbNJ0lyAFsXTsjBbfaDjzALeQsN6M', crossorigin='anonymous')
        link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css')
        link(rel='stylesheet', href='css/shards.min.css')
        link(rel='stylesheet', href='css/shards-demo.css?v=1.1.0')
        link(rel='shortcut icon', type='image/png', href='images/favico/favico.png')
        style(type='text/css').
            .message {
                border-radius: 3px;
                background-color: #d5fdd5;
                text-align: left;
                padding: 50px;
                width: 100%;
            }
    body
        // Navbar
        div
            script(src='js/scripts/navbar.js')
        // Page Content
        .text-center.mb-4
            br
            div(style='background-color: yellow; padding: 25px;')
                h5 To delete a message write in the adress bar:
                br
                h4(style='color: red;') .../peopleSayEdit/id
        br
        div
            .container
                each val in reply
                    .row.justify-content-md-center(style='padding: 20px;')
                        .message(style='padding: 20px;')
                            div
                                h6(style='text-align: left;')
                                    strong #{val.nome}
                                h6(style='text-align: left;')
                                    strong #{val.cognome}
                                h6(style='text-align: left;')
                                    strong #{val.data}
                                h5(style='border-bottom: 1px solid black; width: 100%; text-align: left; padding-bottom: 5px; color: red;')
                                    strong id = #{val.id}
                            h6
                                | #{val.message}
            br
            br
            br
            // footer
            div
                br
                br
                p.text-muted.text-center.small.p-0.mb-4(style='position: relative; bottom: 0; width:100%;') © Copyright 2018 — Aleksandar Gjoreski
            // JavaScript
            #fb-root
            script(async='', defer='', src='https://buttons.github.io/buttons.js')
            script(src='https://code.jquery.com/jquery-3.2.1.min.js', integrity='sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4=', crossorigin='anonymous')
            script(src='https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js', integrity='sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4', crossorigin='anonymous')
            script(src='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/js/bootstrap.min.js', integrity='sha384-h0AbiXch4ZDo7tp9hKZ4TsHbi047NrKGLO3SEJAg45jXxnGIfYzk4Si90RDIqNm1', crossorigin='anonymous')
            script(src='js/shards.min.js')
            script(src='js/demo.min.js')
            script(src='css/lightbox/js/lightbox-plus-jquery.min.js')
