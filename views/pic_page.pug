doctype html
html.no-js(lang='en')
    head
        meta(charset='utf-8')
        meta(http-equiv='x-ua-compatible', content='ie=edge')
        title DDreamKol
        meta(name='description', content='Elegant website for storing data about some villages based on Bootstrap 4')
        meta(name='viewport', content='width=device-width, initial-scale=1')
        link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/css/bootstrap.min.css', integrity='sha384-/Y6pD6FV/Vv2HJnA6t+vslU6fwYXjCFtcEpHbNJ0lyAFsXTsjBbfaDjzALeQsN6M', crossorigin='anonymous')
        link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css')
        link(rel='stylesheet', href='css/shards.min.css')
        link(rel='stylesheet', href='css/gallery.css')
        link(rel='stylesheet', href='css/shards-demo.css?v=1.1.0')
        link(rel='shortcut icon', type='image/png', href='images/favico/favico.png')
        link(href='css/gallery/lity.css', rel='stylesheet')
        script(src='js/gallery/jquery.js')
        script(src='js/gallery/lity-min.js')
        style.
            img{
                image-orientation: from-image;
            }
    body
        // Navbar
        div
            include includes/navbar.pug
        .text-center.mb-4
            h1 #{nome}
            br
            div
                a(href= h_page)
                    button.btn.btn-pill.btn-primary(type='button', href=h_page, style="width: 230px;")
                        i.fa.fa-info.mr-1
                        |  Go to info
        // Page Content
        #cards.container.mb-2(style='padding-bottom: 1px')
            .example.col-md-12.ml-auto.mr-auto(style='width: 100%;')
                .row
                    each val,index in arr
                        div(style='margin: auto; padding: 10px;')
                            if ((arrext[index] != '.mp4') && (arrext[index] != '.m4v'))
                                a(href=val, data-lity)
                                    img(src=arrtmb[index], class="resp", alt=val)
                            else
                                a(href=val, data-lity)
                                    img(src='images/other/video2.png', class="resp", alt='video', style="filter: drop-shadow(5px 5px 3px red);")
            // Footer
            div
                br
                br
                p.text-center.small.p-0.mb-4(style='position: relative; bottom: 0; width:100%; color: black;') © Copyright 2018 — Aleksandar Gjoreski
        // JavaScript
        #fb-root
        script(async='', defer='', src='https://buttons.github.io/buttons.js')
        script(src='https://code.jquery.com/jquery-3.2.1.min.js', integrity='sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4=', crossorigin='anonymous')
        script(src='https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js', integrity='sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4', crossorigin='anonymous')
        script(src='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/js/bootstrap.min.js', integrity='sha384-h0AbiXch4ZDo7tp9hKZ4TsHbi047NrKGLO3SEJAg45jXxnGIfYzk4Si90RDIqNm1', crossorigin='anonymous')
        script(src='js/shards.min.js')
        script(src='js/demo.min.js')