doctype html
html.no-js(lang='en')
    head
        meta(charset='utf-8')
        meta(http-equiv='x-ua-compatible', content='ie=edge')
        title DDreamKol
        meta(name='description', content='Elegant website for storing data about some villages based on Bootstrap 4')
        meta(name='viewport', content='width=device-width, initial-scale=1')
        link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/css/bootstrap.min.css', integrity='sha384-/Y6pD6FV/Vv2HJnA6t+vslU6fwYXjCFtcEpHbNJ0lyAFsXTsjBbfaDjzALeQsN6M', crossorigin='anonymous')
        link(rel='stylesheet', href='https://use.fontawesome.com/releases/v5.0.11/css/all.css', integrity='sha384-p2jx59pefphTFIpeqCcISO9MdVfIm4pNnsL08A6v5vaQc4owkQqxMV8kg4Yvhaw/', crossorigin='anonymous')
        link(rel='stylesheet', href='css/shards.min.css')
        link(rel='stylesheet', href='css/shards-demo.css?v=1.1.0')
        link(rel='shortcut icon', type='image/png', href='images/favico/favico.png')
        link(href='https://fonts.googleapis.com/css?family=Montserrat:400,600&subset=cyrillic,cyrillic-ext', rel='stylesheet')
        link(rel='stylesheet', href='css/teams.css')
        link(rel='stylesheet', href='css/navbar.css')
        link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/fancybox/3.3.5/jquery.fancybox.min.css')
        link(rel='stylesheet', href='css/shared.css')
    body
        // Navbar
        div
            if(jazik == 'eng')
                include includes/navbar.pug
            else
                include includes/mk_navbar.pug
        // background image
        img.bgd(src='images/turnir/gl_field.jpg')
        .text-center.mb-4
            h1#nome(style='padding-top: 30px; padding-bottom: 20px;') #{nome}
            div.tocco
                a(href='images/turnir/teams/nerezi/logo.jpg', data-fancybox='gallery', data-options='{"loop" : true, "animationDuration" : 100, "transitionEffect" : "zoom-in-out", "transitionDuration" : 100, "buttons": ["close","fullScreen"]}')
                    img.stemma(src='images/turnir/teams/nerezi/logo.png')
        // main info
        .mainInfo.frost
            h1.tekst #{mainYear}
            .latest_pic.tocco
                a(href=mainPic, data-fancybox='gallery', data-options='{"loop" : true, "animationDuration" : 100, "transitionEffect" : "zoom-in-out", "transitionDuration" : 100, "buttons": ["close","fullScreen"]}', data-caption=fotoDesc)
                    img(src=mainPic alt=mainYear)
            // wins
            .wins
                details
                    summary.tocco #{nTitles}
                    table.table.table-hover.tbl.frost
                        tbody
                            tr
                                th(scope='row', style='padding-top: 15px; text-align: center; border: none; border-top-left-radius: 10px; border-top-right-radius: 10px;') #{lastTitle}
                            each val in yearsTitles
                                tr
                                    th(scope='row', style='padding-top: 15px; text-align: center;') #{val}
                            tr
                                th(scope='row', style='padding-top: 15px; text-align: center; border-bottom-left-radius: 10px; border-bottom-right-radius: 10px;') #{firstTitle}
        // other years pictures
        #otherPics
            each element, i in yearsGallery
                .years.frost
                    .godina
                        h2.year.tekst #{element}
                        .galleria
                            div
                                each el,indice in data[i].lista_foto
                                    a(href=el, data-fancybox=element, data-options='{"loop" : true, "animationDuration" : 100, "transitionEffect" : "zoom-in-out", "transitionDuration" : 100, "buttons": ["close","fullScreen"]}')
                                        img.resp.tocco(src=data[i].lista_tmb[indice])
        // Footer
        if(jazik == 'eng')
            script(src='js/scripts/footer2.js')
        else
            script(src='js/scripts/mk_footer2.js')
        // JavaScript
        script(src='https://code.jquery.com/jquery-3.2.1.min.js', integrity='sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4=', crossorigin='anonymous')
        script(src='https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js', integrity='sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4', crossorigin='anonymous')
        script(src='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/js/bootstrap.min.js', integrity='sha384-h0AbiXch4ZDo7tp9hKZ4TsHbi047NrKGLO3SEJAg45jXxnGIfYzk4Si90RDIqNm1', crossorigin='anonymous')
        script(src='js/demo.min.js')
        script(src='https://cdnjs.cloudflare.com/ajax/libs/fancybox/3.3.5/jquery.fancybox.min.js')
        script(src='js/scripts/shared.js')
