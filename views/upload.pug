    style.
      @-webkit-keyframes glowing {
      0% { background-color: #ffc100; -webkit-box-shadow: 0 0 3px #ffc100; }
      50% { background-color: #ffde00; -webkit-box-shadow: 0 0 40px #ffde00; }
      100% { background-color: #ffc100; -webkit-box-shadow: 0 0 3px #ffc100; }
      }
      @-moz-keyframes glowing {
      0% { background-color: #ffc100; -moz-box-shadow: 0 0 3px #ffc100; }
      50% { background-color: #ffde00; -moz-box-shadow: 0 0 40px #ffde00; }
      100% { background-color: #ffc100; -moz-box-shadow: 0 0 3px #ffc100; }
      }
      @-o-keyframes glowing {
      0% { background-color: #ffc100; box-shadow: 0 0 3px #ffc100; }
      50% { background-color: #ffde00; box-shadow: 0 0 40px #ffde00; }
      100% { background-color: #ffc100; box-shadow: 0 0 3px #ffc100; }
      }
      @keyframes glowing {
      0% { background-color: #ffc100; box-shadow: 0 0 3px #ffc100; }
      50% { background-color: #ffde00; box-shadow: 0 0 40px #ffde00; }
      100% { background-color: #ffc100; box-shadow: 0 0 3px #ffc100; }
      }
      .button {
      -webkit-animation: glowing 3000ms infinite;
      -moz-animation: glowing 3000ms infinite;
      -o-animation: glowing 3000ms infinite;
      animation: glowing 3000ms infinite;
      }
