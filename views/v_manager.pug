        link(rel='stylesheet', href='css/gallery.css')
        link(href='css/navbar.css', rel='stylesheet')
        link(rel='shortcut icon', type='image/png', href='/images/favico/favico.png')
        link(href='js/swipe/strip.css', rel='stylesheet')
