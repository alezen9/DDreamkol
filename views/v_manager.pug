    body
        // Navbar
        div
            include includes/navbar.pug
        // background image
        img.bgd(src='images/other/sunrise.svg')
        // Page Content
        .text-center.mb-4
            h1 #{paese}
        br
        br
        .container
            div(class='frost3', style='text-align: center;')
                .col-sm-12
                    div
                        br
                        h5 Pictures not published:
                    br
                    div(style='margin: auto; width:120px;')
                        label.custom-control.custom-checkbox.d-block.my-2
                            input.custom-control-input(type='checkbox', id='p_check', onchange="selectAll(this)" , name='p[]')
                            span.custom-control-indicator
                            h6 Check All
                    br
                    form.checkbox(method='post', id='p_check')
                        .row
                            each val,index2 in arr_rev
                                div
                                    .checkbox(style='margin: auto; padding: 10px;')
                                        fieldset
                                            label.custom-control.custom-checkbox.d-block.my-2
                                                input.custom-control-input(type='checkbox', name='p[]', value=val)
                                                span.custom-control-indicator
                                                if ((arrext2[index2] == '.mov') || (arrext2[index2] == '.MOV') || (arrext2[index2] == '.mkv') || (arrext2[index2] == '.avi') || (arrext2[index2] == '.MKV') || (arrext2[index2] == '.AVI'))
                                                    span.badge.mr-3.badge-pill.badge-warning #{arrext2[index2]}
                                                else
                                                    span.badge.mr-3.badge-pill.badge-success #{arrext2[index2]}
                                    div(style='margin: auto; padding: 10px;')
                                        if ((arrext2[index2] == '.jpg') || (arrext2[index2] == '.jpeg') || (arrext2[index2] == '.png') || (arrext[index] == '.JPG') || (arrext[index] == '.JPEG') || (arrext[index] == '.PNG'))
                                            a(href=val, class="strip" data-strip-group="mygroup2" data-strip-group-options="loop: true")
                                                img(src=arrtmbdel[index2], alt=val,class="resp")
                                        else
                                            a(href=val, data-lity)
                                                img(src='images/other/video3.svg',class="resp", alt='video', style='filter: drop-shadow(5px 5px 3px orange);')
                        .row.justify-content-md-center
                            .col-md-6.mb-3
                                div(style='text-align: center;')
                                    br
                                    br
                                    div(style='margin: auto; padding: 5px;')
                                        button.btn.btn-pill.btn-danger(type='submit', name='sub', value='del', style='width: 230px;')
                                            i.fa.fa-close.mr-1
                                            |  Delete selected pictures
                                    div(style='margin: auto; padding: 5px;')
                                        button.btn.btn-pill.btn-success(type='submit', name='sub', value='pub', style='width: 230px;')
                                            i.fa.fa-upload.mr-1
                                            |  Publish selected pictures
            br
            br
            br
            div(class='frost3', style='text-align: center;')
                .col-sm-12
                    div
                        br
                        h5 Pictures published:
                    br
                    div(style='margin: auto; width:120px;')
                        label.custom-control.custom-checkbox.d-block.my-2
                            input.custom-control-input(type='checkbox', id='p_pub', onchange="selectAll2(this)" , name='d[]')
                            span.custom-control-indicator
                            h6 Check All
                    br
                    form.checkbox(method='post', id='p_pub')
                        .row
                            each val1,index in arr_pics
                                div
                                    .checkbox(style='margin: auto; padding: 10px;')
                                        fieldset
                                            label.custom-control.custom-checkbox.d-block.my-2
                                                input.custom-control-input(type='checkbox', name='d[]', value=val1)
                                                span.custom-control-indicator
                                                if ((arrext[index] == '.mov') || (arrext[index] == '.MOV') || (arrext[index] == '.mkv') || (arrext[index] == '.avi'))
                                                    span.badge.mr-3.badge-pill.badge-warning #{arrext[index]}
                                                else
                                                    span.badge.mr-3.badge-pill.badge-success #{arrext[index]}
                                    div(style='margin: auto; padding: 10px;')
                                        if ((arrext[index] == '.jpg') || (arrext[index] == '.jpeg') || (arrext[index] == '.png'))
                                            a(href=val1, class="strip" data-strip-group="mygroup" data-strip-group-options="loop: true")
                                                img(src=arrtmbpub[index], alt=val,class="resp")
                                        else
                                            a(href=val1, data-lity)
                                                img(src='images/other/video3.svg', alt='video',class="resp", style='filter: drop-shadow(5px 5px 3px red);')
                        .row.justify-content-md-center
                            .col-md-6.mb-3
                                div(style='text-align: center;')
                                    br
                                    br
                                    button.btn.btn-pill.btn-danger(type='submit', name='sub', value='delPub', style='width: 230px;')
                                        i.fa.fa-close.mr-1
                                        |  Delete selected pictures
            br
            br
        // Footer
        div
            br
