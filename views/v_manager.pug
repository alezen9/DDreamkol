doctype html
html.no-js(lang='en')
    head
        meta(charset='utf-8')
        meta(http-equiv='x-ua-compatible', content='ie=edge')
        title DDreamKol
        meta(name='description', content='Elegant website for storing data about some villages based on Bootstrap 4')
        meta(name='viewport', content='width=device-width, initial-scale=1')
        link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/css/bootstrap.min.css', integrity='sha384-/Y6pD6FV/Vv2HJnA6t+vslU6fwYXjCFtcEpHbNJ0lyAFsXTsjBbfaDjzALeQsN6M', crossorigin='anonymous')
        link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css')
        link(rel='stylesheet', href='/css/shards.min.css')
        link(rel='stylesheet', href='/css/shards-demo.css?v=1.1.0')
        link(rel='stylesheet', href='css/gallery.css')
        link(rel='shortcut icon', type='image/png', href='/images/favico/favico.png')
        link(href='css/gallery/lity.css', rel='stylesheet')
        script(src='js/gallery/jquery.js')
        script(src='js/gallery/lity-min.js')
    body
        // Navbar
        div
            include includes/navbar.pug
        // Page Content
        .text-center.mb-4
            h1 #{paese}
        br
        br
        .container
            div(class='frost3', style='text-align: center;')
                .col-sm-12
                    div
                        br
                        h5 Pictures not published:
                    br
                    form.checkbox(method='post', id='p_check')
                        .row
                            each val,index2 in arr_rev
                                div
                                    .checkbox(style='margin: auto; padding: 10px;')
                                        fieldset
                                            label.custom-control.custom-checkbox.d-block.my-2
                                                input.custom-control-input(type='checkbox', name='p[]', value=val)
                                                span.custom-control-indicator
                                    div(style='margin: auto; padding: 10px;')
                                        if ((arrext2[index2] != '.mp4') && (arrext2[index2] != '.m4v'))
                                            a.rotate90(href=val, data-lity)
                                                img(src=val, alt=val,class="resp", style='height: 100px; width: 100px')
                                        else
                                            a.rotate90(href=val, data-lity)
                                                img(src='images/other/video2.png',class="resp", alt='video', style='height: 100px; width: 100px; filter: drop-shadow(5px 5px 3px orange);')
                        .row.justify-content-md-center
                            .col-md-6.mb-3
                                div(style='text-align: center;')
                                    br
                                    br
                                    div(style='margin: auto; padding: 5px;')
                                        button.btn.btn-pill.btn-danger(type='submit', name='sub', value='del', style='width: 230px;')
                                            i.fa.fa-close.mr-1
                                            |  Delete selected pictures
                                    div(style='margin: auto; padding: 5px;')
                                        button.btn.btn-pill.btn-success(type='submit', name='sub', value='pub', style='width: 230px;')
                                            i.fa.fa-upload.mr-1
                                            |  Publish selected pictures
            br
            br
            br
            div(class='frost3', style='text-align: center;')
                .col-sm-12
                    div
                        br
                        h5 Pictures published:
                    br
                    form.checkbox(method='post', id='p_pub')
                        .row
                            each val1,index in arr_pics
                                div
                                    .checkbox(style='margin: auto; padding: 10px;')
                                        fieldset
                                            label.custom-control.custom-checkbox.d-block.my-2
                                                input.custom-control-input(type='checkbox', name='p[]', value=val1)
                                                span.custom-control-indicator
                                    div(style='margin: auto; padding: 10px;')
                                        if ((arrext[index] != '.mp4') && (arrext[index] != '.m4v'))
                                            a(href=val1, data-lity)
                                                img(src=val1, alt=val,class="resp", style='height: 100px; width: 100px')
                                        else
                                            a(href=val1, data-lity)
                                                img(src='images/other/video2.png', alt='video',class="resp", style='height: 100px; width: 100px; filter: drop-shadow(5px 5px 3px red);')
                        .row.justify-content-md-center
                            .col-md-6.mb-3
                                div(style='text-align: center;')
                                    br
                                    br
                                    button.btn.btn-pill.btn-danger(type='submit', name='sub', value='del', style='width: 230px;')
                                        i.fa.fa-close.mr-1
                                        |  Delete selected pictures
            br
            br
            br
            div(class='frost3', style='text-align: center;')
                .col-sm-12
                    div
                        br
                        h5 Backup:
                        p (backup.zip should be in "public" directory)
                    br
                    div(style='padding-bottom: 30px')
                        a(href='backup.zip', download='')
                            div
                                img(src='images/other/winrar.png', class="resp", style='height: 150px; width: 150px')
        // Footer
        div
            br
            br
            p.text-center.small.p-0.mb-4(style='position: relative; bottom: 0; width:100%; color: black;') © Copyright 2018 — Aleksandar Gjoreski
