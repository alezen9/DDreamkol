doctype html
html.no-js(lang='en')
    head
        meta(charset='utf-8')
        meta(http-equiv='x-ua-compatible', content='ie=edge')
        title DDreamKol
        meta(name='description', content='Elegant website for storing data about some villages based on Bootstrap 4')
        meta(name='viewport', content='width=device-width, initial-scale=1')
        link(href='/css/lightbox/css/lightbox.min.css', rel='stylesheet')
        link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/css/bootstrap.min.css', integrity='sha384-/Y6pD6FV/Vv2HJnA6t+vslU6fwYXjCFtcEpHbNJ0lyAFsXTsjBbfaDjzALeQsN6M', crossorigin='anonymous')
        link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css')
        link(rel='stylesheet', href='/css/shards.min.css')
        link(rel='stylesheet', href='/css/shards-demo.css?v=1.1.0')
        link(rel='shortcut icon', type='image/png', href='/images/favico/favico.png')
        style.
            img {
                object-fit: cover;
                border-radius: 3%;
            }
    body
        // Navbar
        div
            include includes/navbar.pug
        // Page Content
        .text-center.mb-4
            h1 #{paese}
        br
        br
        .container
            div
                .col-sm-12
                    div
                        h5 Pictures to not published:
                    br
                    form.checkbox(method='post', id='p_check')
                        .row
                            each val in arr_pics_rev
                                div
                                    .checkbox
                                        fieldset
                                            label.custom-control.custom-checkbox.d-block.my-2
                                                input.custom-control-input(type='checkbox', name='c[]', value=val)
                                                span.custom-control-indicator
                                    div(style='margin: auto; padding: 10px;')
                                        a(href=val, data-lightbox='roadtrip')
                                            div
                                                img(src=val, alt='Card image cap', style='height: 100px; width: 100px')
                        .row.justify-content-md-center
                            .col-md-6.mb-3
                                div(style='text-align: center;')
                                    br
                                    br
                                    div(style='margin: auto; padding: 5px;')
                                        button.btn.btn-pill.btn-danger(type='submit', name='sub', value='del')
                                            i.fa.fa-close.mr-1
                                            |  Delete selected pictures
                                    div(style='margin: auto; padding: 5px;')
                                        button.btn.btn-pill.btn-success(type='submit', name='sub',value='pub')
                                            i.fa.fa-upload.mr-1
                                            |  Publish selected pictures
            br
            br
            br
            div
                .col-sm-12
                    div
                        h5 Pictures published:
                    br
                    form.checkbox(method='post', id='p_pub')
                        .row
                            each val in arr_pics
                                div
                                    .checkbox(style='margin: auto; padding: 10px;')
                                        fieldset
                                            label.custom-control.custom-checkbox.d-block.my-2
                                                input.custom-control-input(type='checkbox', name='p[]', value=val)
                                                span.custom-control-indicator
                                    div(style='margin: auto; padding: 10px;')
                                        a(href=val, data-lightbox='roadtrip')
                                            div
                                                img(src=val, alt='Card image cap', style='height: 100px; width: 100px')
                        .row.justify-content-md-center
                            .col-md-6.mb-3
                                div(style='text-align: center;')
                                    br
                                    br
                                    button.btn.btn-pill.btn-danger(type='submit', name='sub', value='del')
                                        i.fa.fa-close.mr-1
                                        |  Delete selected pictures
            br
            br
            br
            div
                .col-sm-12
                    div
                        h5 History:
                    br
                    form.checkbox(method='post', id='h_check')
                        .row
                            each val2 in arr_files
                                div
                                    .checkbox(style='align-content: center;')
                                        fieldset
                                            label.custom-control.custom-checkbox.d-block.my-2
                                                input.custom-control-input(type='checkbox', name='h[]', value=val2)
                                                span.custom-control-indicator
                                    div(style='padding-right: 20px; padding-bottom: 30px')
                                        a(href=val2, download='')
                                            div
                                                img(src='images/demo/pdf_thumbnail.png', alt='Card image cap', style='height: 100px; width: 100px')
                        .row.justify-content-md-center
                            .col-md-6.mb-3
                                div(style='text-align: center;')
                                    br
                                    br
                                    button.btn.btn-pill.btn-danger(type='submit')
                                        i.fa.fa-close.mr-1
                                        |  Delete selected files
                br
                br
                div(style='text-align: center;')
                    a(href='/update_init')
                        button.btn.btn-pill.btn-outline-success(type='button', href='/update_init')
                            i.fa.fa-upload.mr-1
                            |  Update init.pdf file
        br
        br
        br
        // footer
        div
            br
            br
            p.text-muted.text-center.small.p-0.mb-4(style=' bottom: 0; width:100%;') © Copyright 2018 — Aleksandar Gjoreski
        // JavaScript
        #fb-root
        script(async='', defer='', src='https://buttons.github.io/buttons.js')
        script(src='https://code.jquery.com/jquery-3.2.1.min.js', integrity='sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4=', crossorigin='anonymous')
        script(src='https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js', integrity='sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4', crossorigin='anonymous')
        script(src='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/js/bootstrap.min.js', integrity='sha384-h0AbiXch4ZDo7tp9hKZ4TsHbi047NrKGLO3SEJAg45jXxnGIfYzk4Si90RDIqNm1', crossorigin='anonymous')
        script(src='/js/shards.min.js')
        script(src='/js/demo.min.js')
        script(src='/css/lightbox/js/lightbox-plus-jquery.min.js')
